mixin videoPlayer(src)
    .video__player__container
        video(id="myvideo" width="100%" class="video__player")
            source(src= ''+src type="video/mp4")
        .video__player__btns
            progress(max="100" value="0" class="video__progress" id="video__progress-bar" onTimeUpdate="progressUpdate()")
            button(id="videoplayer-play" class="videoplayer__play-btn")
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="10px" height="14px"> <path fill-rule="evenodd"  fill="rgb(255, 255, 255)" d="M-0.000,0.906 L-0.000,13.670 L9.360,7.288 L-0.000,0.906 Z"/></svg>
            button(id="videoplayer-pause" class="videoplayer__pause-btn hidden")
                <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path fill="rgb(255, 255, 255)" d="M10 24h-6v-24h6v24zm10 0h-6v-24h6v24zm-11-23h-4v22h4v-22zm10 0h-4v22h4v-22z"/></svg>
            button(id="videoplayer-fullscreen" class="videoplayer__fullscreen-btn")
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="rgb(255, 255, 255)" d="M21.414 18.586l2.586-2.586v8h-8l2.586-2.586-5.172-5.172 2.828-2.828 5.172 5.172zm-13.656-8l2.828-2.828-5.172-5.172 2.586-2.586h-8v8l2.586-2.586 5.172 5.172zm10.828-8l-2.586-2.586h8v8l-2.586-2.586-5.172 5.172-2.828-2.828 5.172-5.172zm-8 13.656l-2.828-2.828-5.172 5.172-2.586-2.586v8h8l-2.586-2.586 5.172-5.172z"/></svg>

+videoPlayer('src/images/NewZeland.mp4')