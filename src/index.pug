<!DOCTYPE html>
meta(charset = 'utf-8' name='viewport' content='initial-scale=1.0, width=device-width')
meta(name='desctiption' content='UI KIT special for Fullstack development')
link(rel='apple-touch-icon' sizes='180x180' href='./assets/favicons/apple-touch-icon.png')
link(rel='icon' type='image/png' sizes='32x32' href='./assets/favicons/favicon-32x32.png')
link(rel='icon' sizes='any' mask href='./assets/favicons/safari-pinned-tab.svg')
html
head
    title ui-kit
body
    .ul__main
        .wrapper
            .buttons
                include components/buttons/buttons.pug
                h2 Standard buttons
                +button('mint', 'buttons__mint--low', 'Button')
                +button('mint', 'buttons__mint', 'Button')
                +button('orange', 'buttons__orange', 'Button')
                +button('orange', 'buttons__orange--low', 'Button')
            .arrows
                include components/arrows/arrow.pug
                h2 Arrow buttons
                +arrow('arrow-left', false, 'first-arrow-enabled')
                +arrow('arrow-right', false, 'second-arrow-enabled')
                +arrow('arrow-left', true, 'first-arrow-disabled')
                +arrow('arrow-right', true, 'second-arrow-disabled')
            .pie
                h2 Percentages / pie chart
                .pie-charts
                    include components/pie-chart/percentages-chart/percentages.pug
                    +pieChart('25')
                    +pieChart('50')
                    +pieChart('62')
                    +pieChart('89')
                .donut-charts
                    include components/pie-chart/donut-chart/donut.pug
                    +donutChart
            .sliders
                h2 Sliders
                include components/sliders/slider.pug
                +slider('first-slider')
                +slider('second-slider')
            .stages
                h2 Stages
                include components/stages/stages.pug
                +stages('5', 'example-stages')
            .form-elements
                include components/message-form/message.pug
                include components/toggles-form/toggles/toggles.pug
                include components/toggles-form/tick-boxes/checkbox.pug
                .message-form
                    +formMessage('form__user-form', 'example__userName', 'example__userEmail', 'example__userMessage')
                .toggles-form
                    .toggles
                        +toggles
                    .tick-boxes
                        +checkbox
                        +checkbox
            .user
                include components/search/search.pug
                include components/profile/profile.pug
                .search
                    +search('example-search')    
                .profile
                -
                    var users = [
                        {avatar: 'assets/images/profile-man.jpg', name: 'John Smith', job: 'Ux designer', social: { facebook: 'http://facebook.com', twitter: 'http://twitter.com', dbb: 'http://dbb.com'}},
                        {avatar: 'assets/images/profile-girl.jpg', name: 'Sarah Brown', job: 'Developer', social: { facebook: 'http://facebook.com', twitter: 'http://twitter.com', dbb: 'http://dbb.com'}}
                    ]
                each user in users
                    +user_profile(user.avatar, user.name, user.job, user.social.facebook, user.social.twitter, user.social.dbb) 
            .news-events
                include components/News/News.pug
                include components/Events/Events.pug
                .news
                    h2 News
                    +News('divRss')
                .events
                    h2 Events
                    +Events('THIS IS THE TITLE', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.', 'Events_example')
            .location
                include components/location/location.pug
                h2 Location
                +location('class')
            .calendar-with-messaging
                .calendar
                    h2 Calendar
                .messaging
                    h2 Messaging
            .video
                h2 Video