include ../../components/slider/slider

mixin sliders-section (title)
  section.sliders-section
    h2.sliders-section__title= title
    .sliders-section__container
      .sliders-section__container-item
        .sliders-section__item-first
          +slider('js-first-slider')
      .sliders-section__container-item
        .sliders-section__item-second
          +slider('js-second-slider')