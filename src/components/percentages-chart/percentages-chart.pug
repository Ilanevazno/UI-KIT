mixin percentages-chart(currentFill = 0)
  - const maxCount = 100;
  section.percentages-chart
    svg(width="100%" height="100%" viewBox="0 0 42 42").percentages-chart__figure
      circle(class="percentages-chart__filled" cx="21" cy="21" r="15.91549430918954" fill="transparent" stroke="#ce4b99" stroke-width="2" stroke-dasharray=`${currentFill} ${maxCount - currentFill}` stroke-dashoffset="25")
        div.percentages-chart__text= currentFill