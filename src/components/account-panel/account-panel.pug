include ../ripple-button/ripple-button

mixin account-panel ({ title = '', buttonList = [], })
  section.account-panel
    p.account-panel__title= title
    .account-panel__controls
      each link in buttonList
        -
          const {
            href = '',
            description = '',
            theme= 'mint',
            size = 'large',
          } = link;
        .account-panel__controls-item
          +ripple-button({ theme, size, text: description, href })