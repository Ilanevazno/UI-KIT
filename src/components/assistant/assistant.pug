mixin assistant(data = {})
  -
    const {
      placeholder = 'Здравствуйте, чем я могу вам помочь?',
      avatarName = 'sarah-brown.jpg',
      avatar = require(`../../assets/images/${avatarName}`),
      helperName = 'Elena',
    } = data
  section.assistant.js-assistant-widget
    include ../messaging/messaging
    .assistant__start
      .assistant__request-avatar
        img(src= avatar, alt="assistant-avatar").assistant__request-picture
    .assistant__messenger
      +messaging({userName: helperName, widgetClass: "assistant__dialog", placeholder: placeholder})