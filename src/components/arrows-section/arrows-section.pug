include ../arrows/arrow-button
mixin arrows-section (title)
  section.arrows-section
    h2.arrows-section__title= title
    .arrows-section__container
      .arrows-section__container-item
        +arrow-button({ direction: 'left', isDisable: false, })
        +arrow-button({ direction: 'right', isDisable: false, })
      .arrows-section__container-item
        +arrow-button({ direction: 'left', isDisable: true, })
        +arrow-button({ direction: 'right', isDisable: true, })
      .arrows-section__container-item
        +arrow-button({ direction: 'left', isDisable: false, })
        +arrow-button({ direction: 'right', isDisable: false })