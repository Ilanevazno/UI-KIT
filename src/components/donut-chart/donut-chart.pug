mixin donut-chart(donutData = [])
  -
    const [] = donutData;
  section.donut-chart
    svg.donut-chart__figure(width="100%" height="100%", viewBox="0 0 42 42")
      -
        let dashOffset = 60;
      each item in donutData
        - const remainderOfDash = 100 - item.fill;
        circle(
          lass="donut-segment"
          cx="21"
          cy="21"
          r="15.91549430918954"
          fill="transparent"
          stroke= item.color
          stroke-width="6"
          stroke-dasharray=`${item.fill} ${remainderOfDash}`
          stroke-dashoffset= dashOffset
          )
        - dashOffset = (100 - item.fill) + dashOffset