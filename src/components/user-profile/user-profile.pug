include ../svg-icon/svg-icon

mixin user-profile(profile = {})
  -
    const {
      avatar = 'fallen-bg.jpg',
      parsedPicture = require(`../../assets/images/${avatar}`),
      name = 'user',
      job = '',
      social = [
        { href: 'http://facebook.com', icon: 'facebook', },
        { href: 'http://twitter.com', icon: 'twitter', },
        { href: 'http://dbb.com', icon: 'dbb', },
      ],
    } = profile;
  section.user-profile
    .user-profile__picture(style=`background: no-repeat center/cover url(${parsedPicture})`)
    .user-profile__info
      h2.user-profile__info-name= name
      h3.user-profile__info-job= job
      .user-profile__info-social
        each link in social
          a.user-profile__info-social-link(
            target="_blank"
            rel="noopener noreferrer"
            href= link.href
          )
            span.user-profile__svg-icon
              +svg-icon(link.icon)