include ../header-nav/header-nav
include ../header-mobile/header-mobile
include ../account-panel/account-panel

mixin header (pages = {}, theme)
  -
    let headerClassName = 'header ';
    let accountButtonsSize = 'large';
    const logo = { link: './index.html' };
    if (theme) {
      accountButtonsSize = theme === 'small' ? 'small' : 'large';
      headerClassName += `header_theme_${theme}`;
    };
    const buttonList = [
      { href: './login.html', description: 'Вход', size: accountButtonsSize },
      { href: './register.html', description: 'Регистрация', size: accountButtonsSize },
    ];
  div(class= headerClassName)
    nav.header-line__navigation
      +header-nav(pages)
    a.header-line__logo(href= logo.link)
    +account-panel({ title: 'Аккаунт', buttonList })
  .header-line__mobile
    +header-mobile(pages)